 <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifisettings_scan_ll"
    android:layout_width="480dip"
    android:layout_height="120dip"
    android:orientation="horizontal"
    >
    
 	<Switch
	    android:id="@+id/wifi_switch"
	    android:layout_width="132dip"
	    android:layout_height="wrap_content"
	    android:thumb="@drawable/seg_button_switch"
	    android:track="@drawable/seg_track_switch"
	    android:layout_gravity="bottom"
	    android:gravity="bottom"
	    android:layout_marginTop="-20dip"
	    android:layout_marginRight="160dip"
    /> 
	<FrameLayout
	    android:id="@+id/wifisettings_scan_layout"
	    android:layout_width="48dip"
	    android:layout_height="48dip"
	    android:layout_gravity="bottom">
		<ProgressBar
		     android:id="@+id/wifisettings_scan_pb" 
		     android:layout_width="36dip"
		     android:layout_height="36dip"
		     android:visibility="gone"/>
		
		<ImageView
		     android:id="@+id/wifisettings_scan_iv"
		     android:layout_width="36dip"
		     android:layout_height="36dip"
		     android:background="@drawable/xml_ic_wps"
		     android:visibility="visible"
		    />
	</FrameLayout>
</LinearLayout>