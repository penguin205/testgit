<?xml version="1.0" encoding="utf-8"?>
<com.android.settings.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dip"
    android:gravity="center_vertical" >
    
    <TextView
        android:id="@+id/brightness_item_text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="80dp"
        android:textColor="@android:color/white" />
    
    <com.android.settings.NumberSeekBar
        android:id="@+id/brightness_item_number_seekbar"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
      />
    

     <CheckBox
         android:id="@+id/brightness_item_cb"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:button="@drawable/checkbox_selector"
         android:clickable="false"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:layout_marginLeft="80dp"/>

</com.android.settings.CheckableLinearLayout>