<!-- Based on simple_list_item_2.xml in framework -->
<com.android.settings.CustomTwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="48dip"
    android:mode="twoLine"
    android:paddingTop="10dip"
    android:paddingBottom="10dip" >

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerVertical="true" />

<!--     <TextView -->
<!--         android:id="@android:id/text2" -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_alignStart="@android:id/text1" -->
<!--         android:layout_below="@android:id/text1" -->
<!--         android:textAppearance="?android:attr/textAppearanceSmall" -->
<!--         android:visibility="gone" /> -->

    <CheckBox
        android:id="@android:id/selectedIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:button="@drawable/checkbox_selector" />
 
</com.android.settings.CustomTwoLineListItem>