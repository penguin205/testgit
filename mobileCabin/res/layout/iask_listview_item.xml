<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dip"
    android:paddingLeft="5dip"
    android:paddingTop="10dip" >

    <ImageView
        android:id="@+id/iv_listview_item_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:src="@drawable/user_icon"
        android:background="@drawable/user_avatar_bg"
        android:padding="2dip" />

    <TextView
        android:id="@+id/tv_listview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_listview_item_icon"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/iv_listview_item_icon"
        android:text="今天放假!"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_listview_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_listview_item_title"
        android:layout_below="@id/tv_listview_item_title"
        android:layout_marginTop="3dip"
        android:text="放假一起玩游戏去吗？"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_listview_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_listview_item_title"
        android:layout_below="@id/tv_listview_item_message"
        android:layout_marginTop="3dip"
        android:text="2015-12-02 11:54:04"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_listview_item_answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_listview_item_date"
        android:layout_marginLeft="7dip"
        android:layout_toRightOf="@id/tv_listview_item_date"
        android:text="5"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_listview_item_date"
        android:orientation="horizontal"
        android:paddingRight="10dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/iask_reward" />

        <TextView
            android:id="@+id/tv_listview_item_reward_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/yellow_font_color"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>