<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_hotest_quest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iask_bottom_tab_bg"
            android:gravity="center"
            android:text="最热问题"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_newest_quest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iask_bottom_tab_bg"
            android:gravity="center"
            android:text="最新问题"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_highest_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/iask_bottom_tab_bg"
            android:gravity="center"
            android:text="最高悬赏"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <com.example.mobileknow.ui.XListView
        android:id="@+id/listview_iask_answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/my_line_img"
        android:cacheColorHint="@color/transparent"
        android:fastScrollEnabled="true"
        android:layout_marginTop="-3dp"/>
    
</LinearLayout>