<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dip"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="10dip"
    android:layout_marginTop="10dip" >

    <LinearLayout
        android:id="@+id/ll_my_say_item_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_my_say_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-01-08 15:40:32"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_my_say_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/update_item_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_say_item_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ll_my_say_item_date_layout"
        android:layout_below="@id/ll_my_say_item_date_layout"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="2dip"
        android:background="@drawable/me_chat_pop"
        android:paddingBottom="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="帮我找找附近营业厅"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>